<script>
    const navUl = document.querySelector('.navUl');
    const mainHeader = document.querySelector('.mainHeader');
    const liHover = document.querySelectorAll('.liHover');
    const iconWH = document.querySelectorAll('.iconWH');

    navUl.addEventListener('mouseover', () => {
      mainHeader.style.backgroundColor = 'white';
      liHover.forEach(item => {
        item.style.color = 'black';
      });
       iconWH.forEach(item => {
        item.style.color = 'black';
      });
    });

    navUl.addEventListener('mouseout', () => {
      mainHeader.style.backgroundColor = 'transparent';
      liHover.forEach(item => {
        item.style.color = 'white';
      });
      iconWH.forEach(item => {
        item.style.color = 'white';
      });
    });


    /*
    todo: Swiper slider js function implement
    */  

    const swiper = new Swiper('.swiper', {
    loop: true, // Enable looping
    centeredSlides: false,
    slidesPerView: 2,
    spaceBetween: 10,
    navigation: {
        nextEl: '.swiper-next',
        prevEl: '.swiper-prev',
    },
});

</script>