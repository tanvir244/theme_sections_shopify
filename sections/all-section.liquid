    { "type": "paragraph", "content": "This is a paragraph" },
    { "type": "article", "id": "article", "label": "Article" },
    { "type": "blog", "id": "blog", "label": "Blog" },
    { "type": "checkbox", "id": "checkbox", "label": "Checkbox" },
    { "type": "collection", "id": "collection", "label": "Collection" },
    { "type": "collection_list", "id": "collection_list", "label": "Collection List" },
    { "type": "color", "id": "color", "label": "Color" },
    { "type": "color_background", "id": "color_background", "label": "Color Background" },
    { "type": "color_scheme", "id": "color_scheme", "label": "Color Scheme" },

