<!-- Product Cart -->
<div class="min-h-screen flex flex-col items-center bg-[#f4f4f4] py-12">
  <div class="w-[90%] md:w-[80%] pb-10 mx-auto">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'heading' %}
          <h2 class="text-5xl md:text-6xl text-[#192434] pb-4 font-bold"><span style="-webkit-text-stroke: 1.3px #192434; color: transparent;">{{ block.settings.header }}</span></h2>
        {% when 'text' %}
          <p class="text-xl text-[#192434]">{{ block.settings.description }}</p>
      {% endcase %}
    {% endfor %}
  </div>
  <div class="w-[90%] md:w-[80%] mx-auto flex flex-col lg:flex-row gap-20 items-center bg-[#fdfdfd] px-6 md:px-12 py-8 md:py-16 border border-[#dfe1e6] rounded-xl">
    <div class="w-full lg:w-1/2">
      <img src="https://i.ibb.co.com/vxGZs8N/product-image.png" alt="">
    </div>
    <div class="w-full lg:w-1/2">
      <div>
        <span class="text-[#606c7b] text-xl">New</span>
        <h3 class="text-3xl md:text-4xl font-semibold mt-2 text-[#192434]">Copper Brown Genuine Leather Wallet</h3>
        <div class="flex gap-2 mt-6">
          <span class="text-[#606c7b] text-3xl font-semibold">$200</span>
          <span class="text-[#88929f] text-xl mt-2">
            <del>$220</del>
          </span>
        </div>
        <h4 class="text-[#b3bac5] text-lg mt-2 mb-6">Tax Included.</h4>
      </div>
      <div class="text-[#192434] mb-10">
        <h6 class="text-xl font-semibold mb-2">Description</h6>
        <p class="text-lg">Brown embossed genuine leather wallet with multiple chambers for cash and cards. Features card holder.</p>
        <p class="mt-4 mb-2">Color: Brown</p>
        <div class="flex justify-center items-center w-[30px] h-[30px] border border-[#606c7b] rounded">
          <div class="w-[24px] h-[24px] bg-[#fe813e] rounded"></div>
        </div>
      </div>
      <div>
        <div class="flex gap-3 lg:gap-6">
          <div class="flex items-center gap-2 md:gap-6 font-semibold px-5 md:px-8 md:py-2 border-2 border-[#606c7b] rounded-full">
            <span class="text-3xl cursor-pointer" id="decrement">-</span>
            <span class="text-xl" id="quantity">1</span>
            <span class="text-xl cursor-pointer" id="increment">+</span>
          </div>
          <button class="px-8 md:px-16 font-bold border-2 border-[#606c7b] rounded-full hover:bg-[#192434] hover:text-white text-[#192434]">ADD TO BAG</button>
        </div>
        <button class="bg-[#192434] text-white w-full md:w-[406px] py-4 mt-3 md:mt-5 rounded-full font-semibold border-2 border-[#192434] hover:bg-white hover:text-[#192434]">BUY IT NOW</button>
      </div>
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Rich Text",
    "tag": "section",
    "class": "rich_text",
    "limit": 2,
    "settings": [

      {
        "type": "select",
        "id": "content_position",
        "label": "Content Position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "select",
        "id": "content_alignment",
        "label": "Content Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "scheme_1",
        "label": "Color Scheme"
      },
      {
        "type": "checkbox",
        "id": "show_announcement",
        "label": "Full Width",
        "default": true
      }, {
        "type": "header",
        "content": "Padding"
      }, {
        "type": "range",
        "id": "paddint_top",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Top",
        "default": 16
      }, {
        "type": "range",
        "id": "paddint_bottom",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Padding Bottom",
        "default": 16
      }

    ],
    "max_blocks": 5,
    "blocks": [
      {
        "name": "Heading",
        "type": "heading",
        "limit": 5,
        "settings": [
          {
            "type": "richtext",
            "id": "header",
            "label": "Header",
            "default": "<h1>Header</h1>"
          }
        ]
      }, {
        "name": "Text",
        "type": "text",
        "limit": 5,
        "settings": [
          {
            "type": "richtext",
            "id": "description",
            "label": "Text",
            "default": "<P>Description is to be here</P>"
          }
        ]
      }, {
        "name": "Image",
        "type": "image",
        "limit": 5,
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Rich Text",
        "blocks": [
          {
            "type": "heading"
          }, {
            "type": "text"
          }, {
            "type": "image"
          }
        ]
      }
    ],
    "locales": {
      "en": {
        "title": "Slideshow"
      },
      "fr": {
        "title": "Diaporama"
      }
    },
    "enabled_on": {
      "templates": ["*"],
      "groups": ["footer"]
    }
  }
{% endschema %}