<style>
  .scrolling_text_img {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f0f0f0;
  }
  .slider {
    height: 260px;
    width: 90%;
    overflow: hidden;
    position: relative;
    display: flex;
  }
  .slide_track {
    display: flex;
    width: calc(780px * 10);
    /* Ensure space for duplicates */
    animation: scroll 40s linear infinite;
  }
  .slide {
    display: flex;
    gap: 34px;
    width: 780px;
    height: 260px;
    align-items: center;
  }
  .slide_img {
    width: 360px;
    height: 240px;
    object-fit: cover;
  }
  .slide_img img {
    width: 100%;
    height: 100%;
    border-radius: 8px;
  }
  .slide_text {
    font-size: 38px;
    font-weight: bold;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-780px * 5));
      /* Move only half for looping */
    }
  }
</style>


